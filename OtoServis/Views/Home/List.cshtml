@model OtoServis.UI.Models.ServiceOperationViewModel
@{
    ViewData["Title"] = "Oto Servis";
}
<h1>Servise Gelen Araç Listesi</h1>

<table id="example" class="table table-striped table-bordered dt-responsive nowrap " style="width:100%">
    <thead>
        <tr>
            <th>NO</th>
            <th>Araç Plakası</th>
            <th>Marka</th>
            <th>Model</th>
            <th>KM</th>
            <th class="text-center text-nowrap">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.serviceOperations)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.LicensePlate</td>
            <td>@item.Brand</td>
            <td>@item.Model</td>
            <td>@item.KM</td>
            <td>
                <div class="btn-group flex-wrap">
                    <button type="button" class="mb-1 mt-1 mr-1 btn btn-warning btn-sm dropdown-toggle pull-left" data-toggle="dropdown">İşlemler <span class="caret"></span></button>
                    <div class="dropdown-menu pull-left" role="menu">
                        <a class="dropdown-item text-1" href="@Url.Action("Details",new { id = item.Id })"><i class="fas fa-search"></i> Görüntüle</a>
                        <a class="dropdown-item text-1" href="@Url.Action("Update",new { id=item.Id})"><i class="fas fa-edit"></i>Güncelle</a>
                        <a class="dropdown-item text-1" href="@Url.Action("Delete",new { id = item.Id })"><i class='fas fa-trash-alt'></i> Sil</a>
                    </div>
                </div>
            </td>
        </tr>
        }
           
        </tbody>
</table>

